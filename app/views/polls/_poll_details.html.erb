<!-- _poll_details.html.erb -->

<div class="row">
	<h4>Poll ID: <%= poll.id  %>, created <%= poll.created_at.strftime("%b %d, %Y %I:%M%P")  %></h4>
	<h4>Most recently sent: <%= poll.time_sent.strftime("%b %d, %Y %I:%M%P")%></h4>
	<h4>Poll open? <%= poll.is_open  %></h4>
	<h4>Number of replies: <%= @poll.replies.count  %></h4>

	<%= link_to "Edit Poll", edit_user_poll_path(@user.id, poll.id), class: "btn btn-info btn-sm" %>
	<%= link_to "Delete Poll", user_poll_path(@user.id, poll.id), method: :delete, class: "btn btn-danger btn-sm" %>
 
</div>