<% @page_title = "New Poll" %>

<%= render partial: "users/user_navbar", locals: {user: @user, poll: @poll, page_title: "New Poll"} %>

<div class="row">

	<!-- display flash messages -->
	<% flash.each do |k,v| %>
		<h2 id="<%= k %>"><%= v %></h2>
	<% end %>
	
	<div class="col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-8 col-xs-offset-1 col-xs-8">
		<%= render partial: "poll_form", locals: {user: @user, form_title: "New Poll", button_label: "Review New Poll"}   %>
	</div>
</div>