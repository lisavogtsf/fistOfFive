<!-- _poll_preview.html.erb -->
<!-- given from template:  locals: {user: User.find_by_id(poll.user_id), poll: poll -->
<!-- show poll topic, with link, date and number of replies -->

<% if course != nil || user != nil %>
	<% if course %>
		<%= link_to poll.topic, course_poll_path(course.id, poll.id) %>
	<% elsif user %>
	<%= link_to poll.topic, user_poll_path(user.id, poll.id) %>
	<% end %>
<% else %>
	Error retrieving poll previews
<% end %>
