
<!-- polls/show.html.erb  polls/:id  polls#show  user_poll_path-->
<!-- include navbar -->
<!-- details of one poll, make new, and results -->
<%= render partial: "users/user_navbar", locals: {user: @user, poll: @poll, page_title: "Poll Details"} %>

<!-- display flash messages -->
<div class="row">
	<div class="col-md-offset-1 col-md-6">
		<% flash.each do |k,v| %>
			<h4 id="<%= k %>"><%= v %></h4>
		<% end %>

		<h2><%= @poll.topic.titleize  %></h2>

<%= button_to "Send poll via SMS", controller: "sendtexts", action: "send_text_message", user: @user, id: @poll.id  %>

<!-- <button class="btn btn-default" id="send-SMS"><%#= link_to "Send poll via SMS", controller: "sendtexts", action: "send_text_message", method: :post, user: @user, id: @poll.id %></button> -->

		<% if @poll.replies.count > 0 %>


		<%= render partial: "poll_results", locals: {user: @user, poll: @poll, results: @results, percent_results: @percent_results}  %>		

		<% end %>

		<%= link_to "Edit Poll", edit_user_poll_path(@user.id, @poll.id), class: "btn btn-info btn-md" %>
		<%= link_to "Delete Poll", user_poll_path(@user.id, @poll.id), method: :delete, :data => {:confirm => "Are you sure?"}, name: "delete", class: "btn btn-danger btn-md" %>
	
<!-- 		<div class="no-data">No poll data currently available</div>
		<canvas id="myChart" width="800px" height="400"></canvas> -->
	</div>

	<div class="col-md-4">
		<%= render partial: "poll_details", locals: {user: @user, poll: @poll}  %>
		<% if @poll.replies.count > 0 %>
		<h4>Full SMS Replies</h4>
		<% end %>
		<% for reply in @poll.replies do  %>
			<%= render partial: "replies/reply_preview", locals: {poll: @poll, user: @user, reply: reply} %>
		<% end %>
	</div>
</div>

