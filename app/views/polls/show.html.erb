<!-- polls/show.html.erb  polls/:id  polls#show  user_poll_path-->
<!-- include navbar -->
<!-- details of one poll, make new, and results -->
<%= render partial: "users/user_navbar", locals: {user: @user, poll: @poll, page_title: "Poll Details"} %>

<!-- display flash messages -->
<div class="row">
	<div  class="col-xs-offset-1 col-xs-11 col-sm-offset-2 col-sm-10">
		<% flash.each do |k,v| %>
			<h2 id="<%= k %>"><%= v %></h2>
		<% end %>
		<h1><%= @poll.topic.titleize  %></h1>
		<%= render partial: "poll_details", locals: {user: @user, poll: @poll}  %>

			


		<%= link_to "Send poll via SMS", controller: "sendtexts", action: "send_text_message", user: @user, id: @poll.id, class: "btn btn-lg btn-primary"  %>


		<%= image_tag("https://cdn.tutsplus.com/vector/uploads/legacy/tuts/69_Quality_Bar/Picture-14.jpg")  %>
	</div>
</div>

