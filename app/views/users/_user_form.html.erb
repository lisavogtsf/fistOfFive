<!-- _user_form.html.erb -->
<!-- signup partial -->
<div class="row">
	<%= form_for @user, html: {class: "form-horizontal"} do |f|  %>
	<fieldset>
		<legend><%= form_title  %></legend>
		<div class="form-group">
			<%= f.text_field :first_name, class: "form-control", placeholder: "First name", autofocus: true  %>				
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.text_field :last_name, class: "form-control", placeholder: "Last name"  %>				
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.text_field :sms_phone_number, class: "form-control", placeholder: "Phone number (for SMS text messages)"  %>				
		</div>	<!-- closes form-group -->

		<div class="form-group">
			<label class="col-lg-2 control-label">Radios</label>
			<div class="col-lg-10">
				<div class="radio">
				<label>
				<input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
				Option one is this
				</label>
				</div>
			<div class="radio">
				<label>
				<input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
				Option two can be something else
				</label>
			</div>
		</div>











		<div class="form-group">
			<!-- <label for="email" class="col-lg-2 control-label">Email</label>
			<div class="col-lg-10"> -->
			<%= f.text_field :email, class: "form-control", placeholder: "Email"  %>				
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.password_field :password, class: "form-control", placeholder: "Password"  %>
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password"  %>
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.submit button_label, class: "form-control" %>
		</div>	<!-- closes form-group -->
	
	</fieldset>
	<% end %><!--  ends form for -->
</div>