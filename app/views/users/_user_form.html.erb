<!-- _user_form.html.erb -->
<!-- signup partial -->
<div class="row">
	<%= form_for @user, html: {class: "form-horizontal"} do |f|  %>
	<fieldset class="col-md-offset-3 col-md-6">
		<legend><%= form_title  %></legend>
		<div class="form-group">
			<%= f.text_field :first_name, class: "form-control", placeholder: "First name", autofocus: true  %>	
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.text_field :last_name, class: "form-control", placeholder: "Last name"  %>				
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.text_field :sms_phone_number, class: "form-control", placeholder: "Phone number (for SMS text messages)"  %>				
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.text_field :email, class: "form-control", placeholder: "Email"  %>				
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.password_field :password, class: "form-control", placeholder: "Password"  %>
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password"  %>
		</div>	<!-- closes form-group -->
		<div class="form-group ">
			<%= f.radio_button :opt_out, 'false', :checked => true %> 
 			<%= label :opt_out_false, 'Stay connected via SMS' %>
			<%= f.radio_button :opt_out, 'true' %>
  			<%= label :opt_out_true, 'Opt-out of receiving polls' %>
		</div>
		<div class="form-group">
			<%= f.submit button_label, class: "btn btn-form btn-warning" %>
		</div>	<!-- closes form-group -->
	
	</fieldset>
	<% end %><!--  ends form for -->
</div>