<!-- new.html.erb -->
<!-- signup THIS ONE IS DIFFERENT FROM OTHER USERS VIEWS-->
<% @page_title = "Sign Up" %>

<div class="row">
	<div class="col-sm-offset-2 col-sm-8">
		<div class="jumbotron">
			<h1>Fist of Five</h1>
			<!-- display flash messages -->
			<% flash.each do |k,v| %>
				<h2 id="<%= k %>"><%= v %></h2>
			<% end %>
			<%= render partial: "user_form", locals: {user: @user, form_title: "Sign Up", button_label: "Sign Up"}   %>
<!-- 			<div class="small-spacer"></div> -->
			<div class="form-group">
			<%= button_to "Return to home page", root_path, method: :get, class: "form-control" %>
			</div>	
		</div><!-- closes jumbotron -->
	</div>
	
</div>