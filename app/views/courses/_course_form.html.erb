<!-- course_form -->

<!-- Many fields for entering course information, including opt-out? -->

<div class="row course-form">
	<%= form_for @course, html: {class: "form-horizontal"} do |f| %>
	<fieldset><legend><%= form_title  %></legend>
		<div class="form-group">
			<%= f.text_field :title, class: "form-control", placeholder: "Course Title", autofocus: true  %>				
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.text_field :desc, class: "form-control", placeholder: "Course Description"  %>				
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.text_field :schedule, class: "form-control", placeholder: "Course Semester/Schedule"  %>				
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.text_field :course_time_zone, class: "form-control", placeholder: "Course Time Zone"  %>				
		</div>	<!-- closes form-group -->
		<div class="form-group">
			<%= f.submit button_label, class: "form-control"  %>
		</div>
	</fieldset>
	<% end %>
</div>