<!-- show.html.erb -->
<% @page_title = "Course Details" %>

<%= render partial: "users/user_navbar", locals: {user: @user, page_title: "Course Details"} %>


<div class="row">
		<%#= render partial: "course_details", locals: {course: @course}  %>
	<div class="col-md-offset-1 col-md-5">
		<h2><%= @course.title.titleize  %></h2><br>
		<h4><%=  @course.desc %> </h4>
		<h4><%= @course.schedule  %></h4>
		<h4>Timezone: <%= @course.course_time_zone  %></h4>
	</div>
	<div class="col-md-offset-1 col-md-4">
		<!-- show users involved with the course? -->
		<!-- whether current user is enrolled -->
		<!-- users preview partial -->
		<% if @user %>

			<!-- option to edit? join? shows if you have joined? -->
			<!-- create a new poll if joined -->

		<% else %>
			<h4>To enroll in this course,<br> <%= link_to "Sign up for Fist of 5", signup_path  %></h4>
		<% end %>
		<h4>Polls for this course</h4>
		<% for poll in @polls do  %>
			<ul>
				<li><%= render partial: "poll_preview", locals: {user: @user, poll: poll}  %></li>
				<li class="indent">
					
					<%= link_to "Edit Poll", edit_user_poll_path(@user.id, poll.id), name: "edit", class: "btn btn-info btn-xs" %></li>
					<%= link_to "Delete Poll", user_poll_path(@user.id, poll.id), method: :delete, :data => {:confirm => "Are you sure?"}, name: "delete", class: "btn btn-danger btn-xs" %>
					
				</li>
			</ul>
			<% end %>

	</div>
</div>