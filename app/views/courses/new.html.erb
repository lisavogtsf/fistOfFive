<!-- new.html.erb -->
<% @page_title = "New Course" %>
<%= render partial: "users/user_navbar", locals: {user: @user, page_title: "New Course"} %>

<div class="row">

	<!-- display flash messages -->
	<% flash.each do |k,v| %>
		<h2 id="<%= k %>"><%= v %></h2>
	<% end %>
	
	<div class="col-md-offset-1 col-md-6">
		<%= render partial: "course_form", locals: {user: @user, course: @course, form_title: "New Course", button_label: "Save New Course"}   %>
	</div>
</div>